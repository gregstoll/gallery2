		);
	}

	public function testCommentSiteAdminControllerSaveBadShow() {
		GalleryUtilities::putRequestVariable('form[show]', 'abc5000');
		GalleryUtilities::putRequestVariable('form[action][save]', '1');

		$results = $this->handleRequest();
		$this->assertEquals(
