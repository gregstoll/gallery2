	public function testEmptyAkismetApiKeyDisablesAkismet() {
		GalleryUtilities::putRequestVariable('form[latest]', 1);
		GalleryUtilities::putRequestVariable('form[show]', '12');
		GalleryUtilities::putRequestVariable('form[apiKey]', '');
