	}

	public function getActionDisplayName() {
		return array(null, 'cart plugin 1.1', null);
	}

	public function fulfillCart($cartItemIds) {
		return array(GalleryCoreApi::error(ERROR_UNIMPLEMENTED), null);
	}
}
