		global $gallery;

		$UnitTestPlatform = new UnitTestPlatform();

		$gallery->setPlatform($UnitTestPlatform);

		$platform =& $gallery->getPlatform();

		GalleryDataCache::remove('CoreModule::installedVersions');

		$gallery->setConfig('mode.maintenance', 'TEST-VALUE');

