	/**
	 * Sort permissions by group, user then permission name
	 * @access private
	 */
	public function _sortPermissions($a, $b) {
		$aKey = array_keys($a)[0];
		$bKey = array_keys($b)[0];

		if ($aKey == $bKey) {
			return strcmp($a['permission'], $b['permission']);
		}

		return -1 * strcmp($aKey, $bKey);
	}

