		$phpVm->setReturn(
			'setlocale',
			array(LC_ALL, '0'),
			'LC_CTYPE=en_US.UTF-8;LC_NUMERIC=C;LC_TIME=C'
		);

		$gallery->_phpVm = $phpVm;

		$this->assertEquals('UTF-8', GalleryCharsetHelper_simple::detectSystemCharset());
	}

