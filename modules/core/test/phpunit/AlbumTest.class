		}

		list($ret, $success) = GalleryCoreApi::guaranteeAlbumHasThumbnail(
			$this->_parentAlbum->getId()
		);

		if ($ret) {
			return $ret;
		}

		// Result: success
		$this->assertTrue(true, $success, 'success');

		list($ret, $thumbTable) = GalleryCoreApi::fetchThumbnailsByItemIds(
			array(
