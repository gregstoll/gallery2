	public function testGuaranteeAlbumHasThumbnail2() {
		// Album has no thumbnail, 1 child
		list($ret, $child) = $this->_createRandomDataItem(
			$this->_parentAlbum->getId(),
			'test/file'
		);

		if ($ret) {
