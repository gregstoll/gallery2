	public function testRedirectViewForGuestWithoutPermissions() {
		global $gallery;

		$urlGenerator =& $gallery->getUrlGenerator();
		$session      =& $gallery->getSession();

		list($ret, $item) = $this->_createRandomAlbum($this->_getRootId());

		if ($ret) {
