/**
 * This is an implementation of the cart module's CartPluginInterface_1_1
 * @package SnapGalaxy
 * @subpackage Classes
 * @author Alan Harder <alan.harder@sun.com>
 * @version $Revision: 17934 $
 */
class SnapGalaxyCartPlugin /* implements CartPluginInterface_1_0 and CartPluginInterface_1_1 */ {
    /**
     * @see CartPluginInterface_1_0::getSupportedItemTypes
     */
    function getSupportedItemTypes() {
	return array('GalleryPhotoItem');
    }

    /**
     * @see CartPluginInterface_1_1::getRequiredPermissions
     */
    function getRequiredPermissions() {
	return array('snapgalaxy.print');
    }

    /**
     * @see CartPluginInterface_1_0::getActionDisplayName
     */
    function getActionDisplayName() {
	list ($ret, $module) = GalleryCoreApi::loadPlugin('module', 'snapgalaxy');
	if ($ret) {
	    return array($ret, null);
	}
	return array(null, $module->translate('Print with SnapGalaxy'));
    }

    /**
     * @see CartPluginInterface_1_0::fulfillCart
     */
    function fulfillCart($cartItemIds) {
	global $gallery;
	$urlGenerator =& $gallery->getUrlGenerator();

	$returnUrl = $urlGenerator->generateUrl(
	    array('view' => 'cart.ViewCart'),
	    array('forceFullUrl' => true, 'htmlEntities' => false));

	GalleryCoreApi::requireOnce('modules/snapgalaxy/classes/SnapGalaxyHelper.class');
	list ($ret, $cartUrl) = SnapGalaxyHelper::printPhotos($cartItemIds, $returnUrl);
	if ($ret) {
	    return array($ret, null);
	}

	return array(null, array('href' => $cartUrl));
    }
}
