		}

		list($ret, $embeddedLocation) = GalleryCoreApi::getPluginParameter(
			'module',
			'rewrite',
			'modrewrite.embeddedLocation'
		);

		if ($ret) {
			return $ret;
		}

		list($ret, $embeddedHtaccess) = GalleryCoreApi::getPluginParameter(
			'module',
			'rewrite',
			'modrewrite.embeddedHtaccess'
