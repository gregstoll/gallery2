	public function setUp($x1 = null) {
		global $gallery;
		$ret = parent::setUp();

		if ($ret) {
			return $ret;
		}

		$ret = $this->_markPluginParametersForCleanup('module', 'register');

		if ($ret) {
			return $ret;
		}

		foreach (array(
			'emailadmins'      => 0,
			'emailusers'       => 1,
			'subject'          => 'ConfEmail',
			'usersubject'      => 'WelcomeEmail',
			'validation.level' => 'HIGH',
		) as $key => $value) {
			$ret = GalleryCoreApi::setPluginParameter('module', 'register', $key, $value);

			if ($ret) {
				return $ret;
			}
		}

		$this->_emailSubject = '';
