/**
 * Test AddToAny Block functionality
 *
 * @package addtoany
 * @subpackage PHPUnit
 * @author Orestes Sanchez <miceno.atreides@gmail.com>
 */
class AddToAnyBlockCallbackTest extends GalleryTestCase {
	public function __construct($methodName) {
		parent::__construct($methodName);
	}

	/**
	 * Create an album for testing
	 */
	public function setUp($x1 = null) {
		$ret = parent::setUp();

		if ($ret) {
			return $ret;
		}

		$ret = GalleryCoreApi::setPluginParameter(
			'module',
			'addtoany',
			'onlyWhenLoggedIn',
			1
		);

		if ($ret) {
			return $ret;
		}

		return $ret;
	}

	public function testAddToAnyBlockCallback() {
		$data  = $this->_doAddToAnyBlockCallback();
		$block = $data['block']['addtoany'];

		$this->assertTrue(array_key_exists('onlyWhenLoggedIn', $block), 'Missing param onlyWhenLoggedIn');

		$this->assertTrue($block['onlyWhenLoggedIn'], 'Bad param onlyWhenLoggedIn');
	}

	public function _doAddToAnyBlockCallback($userId = null, $itemId = null) {
		$smarty                = new GallerySmarty();
		$callbacks             = new AddToAnyCallbacks();
		$params                = array();
		$params['useDefaults'] = true;

		if (isset($userId)) {
			$smarty->_tpl_vars['theme']['actingUserId'] = $userId;
		}

		if (isset($itemId)) {
			$params['itemId'] = $itemId;
		}
		$result = $callbacks->callback($params, $smarty, 'AddToAnyBlockParams', $userId);

		if (!$result) {
			$result = $smarty->_tpl_vars;
		}

		return $result;
	}
}


// Allow for suppressed php errors
function AddToAnyBlockTest_error_handler($errno, $errstr, $errfile, $errline) {
	if (error_reporting() == 0) {
		return;
	}

	// Else call our default error_handler
	return PHPUnit_error_handler($errno, $errstr, $errfile, $errline);
}
