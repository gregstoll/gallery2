	global $gallery;
	$storage =& $gallery->getStorage();

	$query = '
	SELECT
	  [GalleryQuotasMap::userOrGroupId], [GalleryQuotasMap::quotaSize], [GalleryUser::userName]
	FROM
	  [GalleryQuotasMap], [GalleryUser]
	WHERE
	  [GalleryQuotasMap::userOrGroupId] = [GalleryUser::id]
